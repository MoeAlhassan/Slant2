  {
    "name": "Slant",
    "description": "Political bias analyzer for text",
    "version": "1.0",
    "manifest_version": 2,

    "browser_action": {
      "default_title": "Set AWS Credentials",
      "default_popup": "popup.html",
      "default_icon": "s_slogo.png", //insert slant logo here
      "icons": "s_slogo.png" //insert slant logo
    },

    "background":
    {
    "scripts": ["aws-sdk-2.367.0.min.js","background.js","awsServices.js"],
    "persistent": true,

    "pages": ["http://*/*","https://*/*"]
    },

    "content_scripts": 
  [
    {
      "matches": ["*://*/*"],
      "css": [ "jquery-ui.css", "extension.css" ],
      "js": ["jquery.min.js","jquery-ui.min.js"]
    }
  ],

    "permissions": 
      [
          "tabs",
          "activeTab", 
          "history", 
          "storage", 
          "*://*/*", 
          "http://*/*", 
          "https://*/*"
      ]

  }

  