  {
    "name": "Slant",
    "description": "Political bias analyzer for text and video",
    "version": "2.0",
    "manifest_version": 2,

    "browser_action": {
      "default_title": "Slant",
      "default_popup": "popup.html",
      "default_icon": "images/s_slogo.png", //insert slant logo here
      "icons": "images/s_slogo.png" //insert slant logo
    },

    "background":
    {
    "scripts": ["background.js"],
    "persistent": true,

    "pages": ["http://*/*","https://*/*"]
    },

    "content_scripts": 
  [
    {
      "matches": ["*://*/*"],
      "css": [ "css/jquery-ui.css", "css/extension.css" ],
      "js": ["css/jquery.min.js","css/jquery-ui.min.js"]
    }
  ],

    "permissions": 
      [
          "tabs",
          "activeTab", 
          "history", 
          "storage", 
          "*://*/*", 
          "http://*/*", 
          "https://*/*"
      ],

      "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js; object-src 'self'"
  }

  